{

  "manifest_version": 2,
  "name": "NationTweaker",
  "version": "0.2",
  "description": "Tweaks, fixes, and enhancements for NationBuilder", 

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": ["*://*.nationbuilder.com/*"],
      "js": ["nationtweaker.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },

  "options_ui": {
    "page": "nationtweaker_settings.html"
  },

  "web_accessible_resources": [
    "nationtweaker_settings.html",
    "css/*.css"
  ]

}
